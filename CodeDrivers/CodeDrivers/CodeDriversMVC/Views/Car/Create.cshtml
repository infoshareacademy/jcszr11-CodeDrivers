@model CodeDrivers.Models.Car.Car

@{
    ViewData["Title"] = "Create";
}

<h1>Dodawanie pojazdów</h1>

<h4>Aby dodać pojazd, uzupełnij poniższe pola</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Brand" class="control-label">Wybierz markę pojazdu:</label>
                <select asp-for="Brand" class="form-control" id="brandDropdown" name="brandDropdown">
                    <option value="">Wybierz markę</option>
                    @foreach (var car in Model.CarBrandNames)
                    {
                        <option value="@car">@car</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Model</label>
                <span asp-validation-for="Model" class="text-danger"></span>
                <select asp-for="Model" class="form-control" id="modelDropdown" name="modelDropdown">
                    <option value="">Wybierz model</option>
                    @foreach (var car in Model.Models)
                    {
                        <option value="@car">@car</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Segment" class="control-label">Segment</label>
                <input asp-for="Segment" class="form-control" data-val="true" data-val-required="To pole jest wymagane." />
                <span asp-validation-for="Segment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GearTransmission" class="control-label">Skrzynia biegów</label>
                <input asp-for="GearTransmission" class="form-control" data-val="true" data-val-required="To pole jest wymagane." />
                <span asp-validation-for="GearTransmission" class="text-danger"></span>
            </div>
@*             <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div> *@
            <div class="form-group">
                <label asp-for="PricePerDay" class="control-label">Stawka za dzień</label>
                <input asp-for="PricePerDay" class="form-control" data-val="true" data-val-required="To pole jest wymagane." />
                <span asp-validation-for="PricePerDay" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
