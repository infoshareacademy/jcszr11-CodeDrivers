@model LoginCredentials

@{
    ViewData["Title"] = "Index";
}




<div class="login-panel">
    <div class="col-md-4">
        <h1>Login:</h1>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Nazwa użytkownika: </label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label>Hasło: </label>
                <input id="passwordTextField" type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <div style="display: flex;text-align:center; justify-content: center;">
                    <div class="input-group-text">
                        <input class="form-check-input" type="checkbox" id="passwordShowCheckbox">
                        <label class="form-check-label" for="passwordShowCheckbox">
                            Pokaż hasło
                        </label>
                    </div>
                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Zaloguj" class="btn btn-primary" />
            </div>
            <br />
            <span>
            <button type="button" class="btn btn-info">Zapomniałem hasła</button>
                <button type="button" class="btn btn-info">Zapamiętaj mnie</button>
            </span>
        </form>
    </div>
</div>
