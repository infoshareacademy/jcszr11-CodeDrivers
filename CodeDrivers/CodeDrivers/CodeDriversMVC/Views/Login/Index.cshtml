@model CodeDrivers.Models.User

@{
    ViewData["Title"] = "Index";
}




<div class="login-panel">
    <div class="col-md-4">
        <h1>Logowanie</h1>
        <form asp-action="SignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Adres e-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span class="text-danger">@Html.ValidationMessage("CredentialsValidationError")</span>
            </div>
            <br />
            <div class="form-group">
                <label>Hasło</label>
                <input id="passwordTextField" type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <div style="display: flex;text-align:left; justify-content: left;">

                    <input class="form-check-input" type="checkbox" id="passwordShowCheckbox">
                    <label class="form-check-label" for="passwordShowCheckbox">
                        Pokaż hasło
                    </label>

                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Zaloguj" class="btn btn-primary" />
            </div>
            <br />
            <div style="display: flex; justify-content: center;" class="link-container">
                <a class="link" asp-action="Index">Zapomniałem hasła</a>
                <a class="link" asp-action="Index">Zapamiętaj mnie</a>
            </div>
        </form>
    </div>
</div>
