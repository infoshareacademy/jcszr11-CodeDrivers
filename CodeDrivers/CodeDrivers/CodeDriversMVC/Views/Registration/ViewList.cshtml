@model IEnumerable<CodeDrivers.Models.User>

@{
    ViewData["Title"] = "ViewList";
}

<h1>Lista użytkowników</h1>

<p>
    <a asp-action="Create">Dodaj nowego użytkownika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                Email
            </th>
            <th>
                Numer telefonu
            </th>
            <th>
                Numer prawa jazdy
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriversLicenceNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-email="@item.Email">Edytuj</a> |
                    <a asp-action="Details" asp-route-email="@item.Email">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-email="@item.Email">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
